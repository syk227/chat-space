- messageDatas = []
- message1 = {name: "saya", date: "2019/11/11（wed)", title: "おはよう", message_text:"今日は夜から雨"}
- message2 = {name:"mmm", date: "2022/2/22(mon)", title: "こんにちは", message_text:"アイウエオ"}
- messageDatas << message1
- messageDatas << message2

.main_chat
  .group_info
    .group_info__title
      .group_info__title__list
        %p test
        .group_info__title__list__lists-names
          .group_info__title__list__lists-names__member
            %p Member:
          .group_info__title__list__lists-names__person
            %p saya
      .group_box
        = link_to "Edit", "#"


  
  .message_list
    - messageDatas.each do |data|
      .message_group
        .message_list__name
          %p= "#{data[:name]}"
          .message_list__name__date
            %p= "#{data[:date]}"
        .message_list__title
          %p= "#{data[:title]}"
       
  .message_form
    .message_form__box
      %input{type: "text", class: "main_chat__type__text", placeholder: "type a message"}
      .message_form_box_image
        = icon('fas','image')
      %input{type: "submit", class: "submit-btn", value: "Send"}